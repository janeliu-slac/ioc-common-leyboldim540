record(sel, "$(TCT):GET_TEMP_$(CHAN)") {
    field(DESC, "Lkshr335, measured temp $(CHAN)")
    field(SCAN, "$(DSCAN) second")
    field(SELM, "Specified")
    field(NVL,  "$(TCT):GET_UNITS_$(CHAN)")
    field(INPA, "$(TCT):GET_TEMP_$(CHAN):K")
    field(INPB, "$(TCT):GET_TEMP_$(CHAN):C")
    field(INPC, "$(TCT):GET_TEMP_$(CHAN):S")
    field(PREC, "3")
    field(ADEL, "0.1")
}

